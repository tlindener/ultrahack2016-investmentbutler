<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ultrahack.investmentbutler.fragments.EmergingMarkets">

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iShares MSCI Emerging Markets"
        android:textSize="20sp"
        android:textStyle="normal|bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/stock_emerging"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="?android:attr/dividerVertical"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_fragment_id_next"
            android:layout_height="wrap_content"
            android:text="X"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content" />
        <Button
            android:id="@+id/btn_fragment_id_invest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invest"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>